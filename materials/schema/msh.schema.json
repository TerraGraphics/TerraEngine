          "entrypoint": {
            "type": "string",
            "minLength": 1
          },
          "order": {
            "type": "integer"
          },
          "override": {
            "type": "boolean"
          },
          "include": {
            "type": "array",
            "uniqueItems": true,
            "items": {
              "type": "string",
              "minLength": 1
